<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="3"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageButton android:id="@+id/img1"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_plus_circle_black_48dp"/>
        <ImageButton android:id="@+id/img2"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_plus_circle_black_48dp"/>
        <ImageButton android:id="@+id/img3"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_plus_circle_black_48dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageButton android:id="@+id/img4"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_plus_circle_black_48dp"/>
        <ImageButton android:id="@+id/img5"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_plus_circle_black_48dp"/>
        <ImageButton android:id="@+id/img6"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_plus_circle_black_48dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageButton android:id="@+id/img7"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_plus_circle_black_48dp"/>
        <ImageButton android:id="@+id/img8"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_plus_circle_black_48dp"/>
        <ImageButton android:id="@+id/img9"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_plus_circle_black_48dp"/>
    </LinearLayout>
</LinearLayout>